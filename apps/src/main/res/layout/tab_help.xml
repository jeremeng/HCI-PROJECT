<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"

    android:layout_marginTop="?attr/actionBarSize">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button5"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/contents_frame"
            android:layout_width="match_parent"
            android:background="@color/colorBackground"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="36dp">

        </FrameLayout>
    </FrameLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button4"
        android:layout_marginTop="15dp"
        android:background="@mipmap/help"
        android:text="How to add my own workout ?" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button"
        android:layout_marginTop="60dp"
        android:background="@mipmap/help"
        android:text="How to Create an Account ?" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/button5"
        android:layout_below="@+id/button"
        android:layout_marginTop="45dp"
        android:background="@mipmap/help"
        android:text="How to see my own workout list ?" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:background="@mipmap/help"
        android:text="Having more Problem ?" />

</RelativeLayout>